using Cmd in cmd
using randrange in random
using exit in sys

type 猜数字 : Cmd {
    {
        intro = "木兰想了个 100 之内的数，猜猜是几？"
        想的 = randrange(100)
        prompt = '请猜吧: '
    }

    func $default(行) {
        数 = int(行)
        if 数 > self.想的 {
            println("太大了!")
        } elif 数 < self.想的 {
            println("太小了!")
        } else {
            println("中了!")
            self.do_quit(行)
        }
    }

    func $do_quit(arg) {
        exit()
    }
}

猜数字().cmdloop()